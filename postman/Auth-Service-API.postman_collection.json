{
    "info": {
        "_postman_id": "auth-service-collection",
        "name": "Auth Service API",
        "description": "Authentication service for Smart Appointment Booking System",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"Password123!\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phoneNumber\": \"+1234567890\",\n  \"role\": \"ROLE_PATIENT\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8001/api/v1/auth/register",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8001",
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"Password123!\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8001/api/v1/auth/login",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8001",
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "login"
                            ]
                        }
                    }
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
                        },
                        "url": {
                            "raw": "http://localhost:8001/api/v1/auth/refresh?refreshToken={{refresh_token}}",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8001",
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "refresh"
                            ],
                            "query": [
                                {
                                    "key": "refreshToken",
                                    "value": "{{refresh_token}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Current User (/me)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:8001/api/v1/auth/me",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8001",
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "me"
                            ]
                        }
                    }
                },
                {
                    "name": "Verify Email",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:8001/api/v1/auth/verify-email?email=john@example.com",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8001",
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "verify-email"
                            ],
                            "query": [
                                {
                                    "key": "email",
                                    "value": "john@example.com"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Forgot Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:8001/api/v1/auth/forgot-password?email=john@example.com",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8001",
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "forgot-password"
                            ],
                            "query": [
                                {
                                    "key": "email",
                                    "value": "john@example.com"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Reset Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "http://localhost:8001/api/v1/auth/reset-password?email=john@example.com&newPassword=NewPass123!",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8001",
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "reset-password"
                            ],
                            "query": [
                                {
                                    "key": "email",
                                    "value": "john@example.com"
                                },
                                {
                                    "key": "newPassword",
                                    "value": "NewPass123!"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Health & Info",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "http://localhost:8001/actuator/health",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8001",
                            "path": [
                                "actuator",
                                "health"
                            ]
                        }
                    }
                },
                {
                    "name": "Swagger UI",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "http://localhost:8001/swagger-ui.html",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8001",
                            "path": [
                                "swagger-ui.html"
                            ]
                        }
                    }
                },
                {
                    "name": "API Docs",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "http://localhost:8001/api-docs",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8001",
                            "path": [
                                "api-docs"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "jwt_token",
            "value": "your_jwt_token_here",
            "type": "string"
        },
        {
            "key": "refresh_token",
            "value": "your_refresh_token_here",
            "type": "string"
        }
    ]
}